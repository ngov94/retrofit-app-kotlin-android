<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/student_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="4dp"
        app:cardCornerRadius="2dp"
        android:elevation="60dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sugar_conc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                />
            <TextView
                android:id="@+id/sugar_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mmol/L"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_below="@id/sugar_conc"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022-05-04"
                android:textColor="@color/black"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00 am"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_toRightOf="@id/date"
                android:layout_marginStart="4dp"

                />

            <TextView
                android:id="@+id/measuredTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measured: "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/date"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/measured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Measured"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/date"
                android:layout_toRightOf="@id/measuredTitle"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/measuredTitle"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@id/measured"
                android:layout_toRightOf="@id/notesTitle"
                android:layout_marginTop="8dp"
                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>